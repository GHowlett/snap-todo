@require 'jeet/stylus/jeet'

bck-color = #00688b;

.todo-app
	h1, h2
		background: bck-color

	h1
		line-height: 0;
		text-align: center;
		font-family: "PT Sans Caption","Myriad Pro";
		// font-family: "Helvetica Neue",Helvetica,Arial;
		
		img
			width: 70%;
			
	h2
		font-size: 20pt;
		text-align: center;
		font-family: "GillSansMTStd-Book", "Helvetica Neue", Arial, Helvetica, sans-serif;
		color: white;
		text-shadow: 0px 1px 4px rgba(0,0,0,0.4);
		
	.intro
		background: bck-color
		padding: 3px;

		h1
			margin-top: 0.3em;
			margin-bottom: 0;
		h2
			margin-top: 0.2em;
			margin-bottom: 0.3em;
			
	.todo-count
		display: inline-block;
		color: darkorange;
		transform: rotate(-5deg);

	div
		position: relative;

	.done
		text-decoration: line-through;

	li
		list-style: none;
		border: 1px solid black;
		&:not(:first-child)
			border-top: 0;
		
	ul	
		padding-left: 0;
	
	.todo
		outline: 0;
		border: 0;
		broder-radius: 3px;
		padding: 5px;
		padding-left: 30px;
		font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
		
	.todo:nth-child(even)
		background: #ade6c6;
	.todo:nth-child(odd)
		background: lightblue;
	
		
		