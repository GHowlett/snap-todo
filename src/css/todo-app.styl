@require 'jeet/stylus/jeet'

bck-color = #00688b;

.gradient-bar
	height: 20px;
	background: linear-gradient(to bottom, #00688b 0%, #00688b 51%, #003446 100%);

.todo-app
	h1, h2
		background: bck-color

	h1
		line-height: 0;
		text-align: center;
		font-family: "PT Sans Caption","Myriad Pro";
		// font-family: "Helvetica Neue",Helvetica,Arial;
		
		img
			width: 70%;
			
	h2
		font-size: 20pt;
		text-align: center;
		font-family: "GillSansMTStd-Book", "Helvetica Neue", Arial, Helvetica, sans-serif;
		color: white;
		text-shadow: 0px 1px 4px rgba(0,0,0,0.4);
		
	.intro
		background: bck-color
		padding: 3px;

		h1
			margin-top: 0.3em;
			margin-bottom: 0;
		h2
			margin-top: 0.2em;
			margin-bottom: 0.3em;
			
	.todo-count
		display: inline-block;
		color: darkorange;
		transform: rotate(-5deg);

	div
		position: relative;

	.done
		text-decoration: line-through;
	
	.todo:nth-child(even)
		background: #ade6c6;
	.todo:nth-child(odd)
		background: lightblue;
	.todo
		position: relative;
		outline: 0;
		border: 0;
		border-radius: 3px;
		padding-right: 5px;
		padding-left: 5em;
		font-size: 16pt;
		// line-height: 3em;
		min-height: 3em;
		vertical-align: middle;
		
		list-style: none;
		font-family: "GillSansMTStd-Book", "Helvetica Neue", Arial, Helvetica, sans-serif;
		color: #00688b;
		text-shadow: 1px 1px 3px rgba(255,255,255,0.4);

		input[type="checkbox"]
			display: none;
			
		label
			display: table-cell;
			vertical-align: middle;
			height: 3em;
			
		label.done
			opacity: 0.3;
			
		label::before
			content: "";
			display: inline-block;
			position: absolute;
			top: 0;
			left: 1em;
			width: 3em;
			height: 3em;
			background: url(../img/snap-logo-unchecked.png);
			background-size: 100%;
			opacity: 1;
			
		label.done::before
			background: url(../img/snap-logo-checked.png);
			background-size: 100%;
			opacity: 0.5;
			
	.todo.placeholder input
		background: transparent;
		border: transparent;
		font-size: 100%;
		display: table-cell;
		vertical-align: middle;
		height: 3em;
		opacity: 0.5;
		text-shadow: 1px 1px rgba(255,255,255,0.7);
	.todo.placeholder input:focus
		border: 0;
		outline: none;	
		
	ul	
		margin-top: 0;
		padding-left: 0;
	
		
		