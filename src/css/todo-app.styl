// @require 'dependency.styl'
@require 'jeet/stylus/jeet'

.todo-app
	h1, h2
		background: #b3d4fc;

	h1
		margin-top: 0.3em;
		margin-bottom: 0.3em;
		line-height: 0;
		
		text-align: center;
		color: #006b8f
		font-family: "PT Sans Caption","Myriad Pro";
		// font-family: "Helvetica Neue",Helvetica,Arial;
		
		img
			width: 70%;
			
	h2
		
		font-size: 20pt;
		text-align: center;
		font-family: "GillSansMTStd-Book", "Helvetica Neue", Arial, Helvetica, sans-serif;
		color: white;
		text-shadow: 0px 1px 4px rgba(0,0,0,0.4);
		
	.intro
		background: #b3d4fc;
		padding: 3px;

		h1
			margin-bottom: 0;
		h2
			margin-top: 0.2em;
			
	.todo-count
		color: red;
		

	div
		position: relative;

	.done
		text-decoration: line-through;

	li
		list-style: none;
		border: 1px solid black;
		&:not(:first-child)
			border-top: 0;
		
	ul	
		padding-left: 0;
		